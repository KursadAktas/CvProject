@model List<About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hakkımda</h2>

<table class="table table-bordered">

    <tr>
        <th>Id</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Adres</th>
        <th>Telefon</th>
        <th>EPosta</th>
        <th>Resim</th>
        <th>Düzenle</th>

    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.LastName</td>
            <td>@item.Adress</td>
            <td>@item.Phone</td>
            <td>@item.Mail</td>
            <td>@item.Image</td>
            <td>
                <a class="btn btn-info btn-sm" asp-controller="About" asp-action="Update" asp-route-id="@item.Id">
                    <i class="fas fa-pencil-alt">
                    </i>
                    Güncelle
                </a>
            </td>


        </tr>
    }

</table>
<a asp-controller="About" asp-action="Add" class="btn btn-primary">Yeni Eğitim Ekle</a>

